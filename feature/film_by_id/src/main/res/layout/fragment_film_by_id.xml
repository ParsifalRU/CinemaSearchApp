<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок с названием фильма -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название фильма"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Изображение постера -->
        <ImageView
            android:id="@+id/imageViewPoster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginBottom="8dp"/>

        <!-- Описание фильма -->
        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Описание фильма"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Описание фильма"
            android:layout_marginBottom="8dp"/>

        <!-- Рейтинг -->
        <TextView
            android:id="@+id/textViewRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Рейтинг: 0.0"
            android:layout_marginBottom="8dp"/>

        <!-- Заголовок для отзывов -->
        <TextView
            android:id="@+id/textViewReviewsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отзывы"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Список отзывов (RecyclerView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Заголовок для актеров -->
        <TextView
            android:id="@+id/textViewActorsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Актеры"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Список актеров (RecyclerView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewActors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Заголовок для сезонов (для сериалов) -->
        <TextView
            android:id="@+id/textViewSeasonsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сезоны"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Список сезонов (RecyclerView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSeasons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Кнопка "Назад" -->
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>